<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.takeoffandroid.recyclerviewtemplate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:ignore="AllowBackup">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SimpleListActivity"
            android:label="@string/title_activity_simple_list_all"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.SimpleListCardsActivity"
            android:label="@string/title_activity_simple_list_all_cards"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.SimpleGridActivity"
            android:label="@string/title_activity_simple_grid_all"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.BannerListActivity"
            android:label="@string/title_activity_banner_list"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.BannerGridActivity"
            android:label="@string/title_activity_banner_grid"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.RadioListActivity"
            android:label="@string/title_activity_radio_list"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.RadioGridActivity"
            android:label="@string/title_activity_radio_grid"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.CheckboxListActivity"
            android:label="@string/title_activity_checkbox_list"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.CheckboxGridActivity"
            android:label="@string/title_activity_checkbox_grid"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.SimpleGridCardsActivity"
            android:label="@string/title_activity_simple_grid_cards"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.ToggleListActivity"
            android:label="@string/title_activity_toggle_list"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.ToggleGridActivity"
            android:label="@string/title_activity_toggle_grid"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.HeaderListActivity"
            android:label="@string/title_activity_header_list"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.HeaderGridActivity"
            android:label="@string/title_activity_header_grid"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.FooterListActivity"
            android:label="@string/title_activity_footer_list"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.FooterGridActivity"
            android:label="@string/title_activity_footer_grid"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.HeaderFooterListActivity"
            android:label="@string/title_activity_header_footer_list"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.GooglePlayActivity"
            android:label="@string/title_activity_google_play"
            android:theme="@style/AppTheme.Template.Base" />
        <activity
            android:name=".activity.HeaderFooterGridActivity"
            android:label="@string/title_activity_header_footer_grid"
            android:theme="@style/AppTheme.Template.Base" />
    </application>
</manifest>